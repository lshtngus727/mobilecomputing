<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- 프로필 정보 -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/bg_mypage_cell">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="프로필 이미지"
                android:src="@drawable/ic_profile" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvName"
                    android:text="김한밥 @USER_ID_HERE"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMajorStudentId"
                    android:text="컴퓨터공학과 / 20210000" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmail"
                    android:text="user_email@adress.here" />
            </LinearLayout>
        </LinearLayout>

        <!-- 나의 동아리 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 동아리"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_mypage_cell">
        <Button
            android:id="@+id/btnMyClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동아리 바로가기"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

        <!-- 총동 메뉴 -->
        <TextView
            android:id="@+id/tvUnionSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총동아리연합회"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_mypage_cell">

            <Button
                android:id="@+id/btnUnionNotices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:text="공지사항" />

            <Button
                android:id="@+id/btnUnionQna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:text="QnA" />

            <Button
                android:id="@+id/btnUnionResources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:text="자료실" />

            <Button
                android:id="@+id/btnApplyClub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:text="지원하기" />

            <Button
                android:id="@+id/btnSavedForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:text="지원서 저장 기록" />

            <!-- 총동 관리자만 노출 -->
            <Button
                android:id="@+id/btnManageLeaders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="임원 명단 설정"
                android:backgroundTint="@color/teal_700"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 회원탈퇴 -->
        <Button
            android:id="@+id/btnWithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
